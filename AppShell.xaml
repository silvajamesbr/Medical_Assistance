<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Medical_Assistance.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Medical_Assistance"
    Title="+ Medical Assistance"
        Shell.FlyoutBehavior="Locked"
    BackgroundColor="#610000"
    Shell.TabBarIsVisible="False">

    <Shell.FlyoutBackground>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#8B0000" Offset="0.0" />
            <!-- Dark Red -->
            <GradientStop Color="#1A1A1A" Offset="1.0" />
            <!-- Cinza escuro -->
        </LinearGradientBrush>
    </Shell.FlyoutBackground>

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <HorizontalStackLayout HeightRequest="60">
                <Image Source="{Binding FlyoutIcon}" Grid.Column="0"
                       HeightRequest="30"
                       
                       
                       Margin="20,0,0,0"/>
                <Label Text="{Binding Title}" 
                       FontFamily="OpenSans" 
                       FontAttributes="Bold" 
                       FontSize="18"
                       TextColor="AliceBlue"
                       Grid.Column="1"
                       Margin="30,0,0,0"
                       VerticalOptions="Center"
                       
                       />
                </HorizontalStackLayout>

            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>
    
    <Shell.FlyoutHeaderTemplate >
        <DataTemplate>


            <Grid
      >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" HorizontalOptions="Fill" WidthRequest="600" HeightRequest="36" Margin="-10,-35,0,0" BackgroundColor="#FF202020"/>
                <Image  Grid.Row="1" VerticalOptions="Start"
                    HeightRequest="250"
           Source="logo2.png"/>
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>


    <Shell.FlyoutFooterTemplate>
        <DataTemplate>
            <Grid>
                <Grid.Shadow>
                    <Shadow Brush="Black"
                        Opacity="0.3"
                        Radius="10"
                        Offset="10,5" />
                    <!-- Aqui define o offset -->
                </Grid.Shadow>
            </Grid>
        </DataTemplate>
    </Shell.FlyoutFooterTemplate>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
        FlyoutIcon="agenda.png" Title="Agendamentos"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        <ShellContent
        FlyoutIcon="cadastro.png" Title="Cadastros"
        ContentTemplate="{DataTemplate local:Cadastro}"
        Route="Cadastro" />
        <ShellContent
        FlyoutIcon="historico.png" Title="Histórico"
        ContentTemplate="{DataTemplate local:Historico}"
        Route="Historico" />
        <ShellContent
        FlyoutIcon="horarios.png" Title="Horários"
        ContentTemplate="{DataTemplate local:Horarios}"
        Route="Horarios" />
    </FlyoutItem>
</Shell>
